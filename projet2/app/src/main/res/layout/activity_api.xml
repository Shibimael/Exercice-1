<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etLivre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/livre"
        android:inputType="textPersonName"
        android:lineSpacingExtra="0sp"
        android:saveEnabled="false"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textColorLink="#000000" />


    <TextView
        android:id="@+id/tvAuteur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/Auteur"
        android:textAlignment="center"
        android:textColor="#090808"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTitre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:textColor="#04B3F8"
        android:textColorHighlight="#000000"
        android:textSize="24sp"
        tools:text="@string/Titre" />



    <Button
        android:id="@+id/btsend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:width="200dp"
        android:text="@string/bt_send"
        android:textColor="#000000"
        android:textStyle="bold"
        app:backgroundTint="#03A9F4"
        app:iconTint="#00000000" />

    <Button
        android:id="@+id/btreturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:width="200dp"
        android:text="@string/btreturn"
        android:textColor="#000000"
        android:textStyle="bold"
        app:backgroundTint="@color/purple_500"
        app:iconTint="#00000000" />


</LinearLayout>