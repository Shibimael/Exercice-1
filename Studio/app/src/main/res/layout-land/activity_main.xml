<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/naruto"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ushi"
        android:textAlignment="center"
        android:textColor="#FBFBFB"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/ETNom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/input_login"
        android:inputType="textPersonName"
        android:lineSpacingExtra="0sp"
        android:saveEnabled="false"
        android:textAlignment="center"
        android:textColor="#FBF9F9"
        android:textColorHint="#F6F4F4" />

    <EditText
        android:id="@+id/ETmdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/input_password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#F4EFEF" />

    <TextView
        android:id="@+id/compteur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textColor="#00BCD4" />

    <TextView
        android:id="@+id/TvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#04B3F8"
        android:textSize="24sp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BtRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:width="200dp"
            android:text="@string/bt_regist"
            android:textColor="#000000"
            android:textStyle="bold"
            app:backgroundTint="#C30404"
            app:iconTint="#00000000" />

        <Button
            android:id="@+id/BtSha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:width="200dp"
            android:text="@string/bt_shar"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="#FDFDFD" />
    </LinearLayout>


</LinearLayout>